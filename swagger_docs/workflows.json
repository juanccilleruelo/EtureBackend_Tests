{
  "swagger":"2.0",
  "info":
  {
    "version":"Ver 1.0",
    "title":"Eture Server API",
    "description":"Eture Server RESTful API Documentation",
    "contact":
    {
      "name":"Juan C.Cilleruelo",
      "email":"juanc.cilleruelo@sencille.es",
      "url":"https:\/\/github.com\/juanccilleruelo"
    }
  }
,
  "host":"127.0.0.1:8181",
  "basePath":"\/api",
  "schemes":
  [
    "http"
  ]
,
  "paths":
  {
    "\/login":
    {
      "post":
      {
        "tags":
        [
          "JWT Authentication"
        ]
,
        "description":"Create JSON Web Token",
        "produces":
        [
          "application\/json"
        ]
,
        "parameters":
        [
                    {
            "in":"header",
            "name":"jwtusername",
            "type":"string"
          }
,
          
          {
            "in":"header",
            "name":"jwtpassword",
            "type":"string"
          }
        ]
,
        "responses":
        {
          "200":
          {
            "description":"OK",
            "schema":
            {
              "type":"object",
              "properties":
              {
                "token":
                {
                  "type":"string",
                  "description":"JWT Token"
                }
              }
            }
          }
,
          "401":
          {
            "description":"Invalid authorization type"
          }
,
          "403":
          {
            "description":"Forbidden"
          }
,
          "500":
          {
            "description":"Internal server error"
          }
        }
,
        "security":
        [
                    {
            "basic":
            [
                          ]
          }
        ]
      }
    }
,
    "\/workflows\/insertwfstep":
    {
      "post":
      {
        "tags":
        [
          "Workflow Steps"
        ]
,
        "description":"Add step to workflow",
        "operationId":"WorkflowsController.TWorkflowsController_InsertWFStep",
        "consumes":
        [
          "application\/json"
        ]
,
        "produces":
        [
          "application\/json"
        ]
,
        "parameters":
        [
                    {
            "in":"body",
            "name":"CD_WF_STEP_TYPE",
            "description":"Workflow step type code (optional)",
            "type":"string"
          }
,
          
          {
            "in":"body",
            "name":"CD_WORKFLOW",
            "description":"Workflow code identifier (required)",
            "required":true,
            "type":"string"
          }
,
          
          {
            "in":"body",
            "name":"STEP_NUMBER",
            "description":"Step number in workflow sequence (required)",
            "required":true,
            "type":"integer"
          }
        ]
,
        "responses":
        {
          "201":
          {
            "description":"Workflow step added successfully"
          }
,
          "400":
          {
            "description":"Missing required parameters CD_WORKFLOW or STEP_NUMBER"
          }
,
          "409":
          {
            "description":"Step number already exists for this workflow"
          }
,
          "500":
          {
            "description":"Internal server error"
          }
        }
      }
    }
,
    "\/workflows\/loadwfsteps":
    {
      "post":
      {
        "tags":
        [
          "Workflow Steps"
        ]
,
        "description":"Load steps for a workflow with pagination",
        "operationId":"WorkflowsController.TWorkflowsController_LoadWFSteps",
        "consumes":
        [
          "application\/json"
        ]
,
        "produces":
        [
          "application\/json"
        ]
,
        "parameters":
        [
                    {
            "in":"body",
            "name":"Language",
            "description":"Language code EN\/ES (optional, default EN)",
            "default":"EN",
            "type":"string"
          }
,
          
          {
            "in":"body",
            "name":"CD_WORKFLOW",
            "description":"Workflow code identifier (required)",
            "required":true,
            "type":"string"
          }
,
          
          {
            "in":"body",
            "name":"PageNumber",
            "description":"Page number for pagination (must be >= 1, required)",
            "required":true,
            "type":"integer"
          }
        ]
,
        "responses":
        {
          "200":
          {
            "description":"Array of workflow steps with STEP_NUMBER, CD_WF_STEP_TYPE, DS_WF_STEP_TYPE (X-Pages-Quantity header contains total pages)"
          }
,
          "400":
          {
            "description":"Missing required parameters or invalid pagination"
          }
,
          "500":
          {
            "description":"Internal server error"
          }
        }
      }
    }
,
    "\/workflows\/deletewfstep":
    {
      "post":
      {
        "tags":
        [
          "Workflow Steps"
        ]
,
        "description":"Remove step from workflow",
        "operationId":"WorkflowsController.TWorkflowsController_DeleteWFStep",
        "consumes":
        [
          "application\/json"
        ]
,
        "produces":
        [
          "application\/json"
        ]
,
        "parameters":
        [
                    {
            "in":"body",
            "name":"CD_WORKFLOW",
            "description":"Workflow code identifier (required)",
            "required":true,
            "type":"string"
          }
,
          
          {
            "in":"body",
            "name":"STEP_NUMBER",
            "description":"Step number to delete (required)",
            "required":true,
            "type":"integer"
          }
        ]
,
        "responses":
        {
          "200":
          {
            "description":"Workflow step deleted successfully"
          }
,
          "400":
          {
            "description":"Missing required parameters CD_WORKFLOW or STEP_NUMBER"
          }
,
          "404":
          {
            "description":"Workflow step not found"
          }
,
          "500":
          {
            "description":"Internal server error"
          }
        }
      }
    }
,
    "\/workflows\/isreferenced":
    {
      "post":
      {
        "tags":
        [
          "Workflows"
        ]
,
        "description":"Check if workflow is referenced by other entities",
        "operationId":"WorkflowsController.TWorkflowsController_IsReferenced",
        "consumes":
        [
          "application\/json"
        ]
,
        "produces":
        [
          "application\/json"
        ]
,
        "parameters":
        [
                    {
            "in":"body",
            "name":"CD_WORKFLOW",
            "description":"Workflow code identifier (required)",
            "required":true,
            "type":"string"
          }
        ]
,
        "responses":
        {
          "200":
          {
            "description":"Array with TABLE field containing list of tables that reference this workflow, or NONE if no references"
          }
,
          "400":
          {
            "description":"Missing required parameter CD_WORKFLOW"
          }
,
          "500":
          {
            "description":"Internal server error"
          }
        }
      }
    }
,
    "\/workflows\/getorderbyfields":
    {
      "post":
      {
        "tags":
        [
          "Workflows"
        ]
,
        "description":"Get available fields for ordering",
        "operationId":"WorkflowsController.TWorkflowsController_GetOrderByFields",
        "consumes":
        [
          "application\/json"
        ]
,
        "produces":
        [
          "application\/json"
        ]
,
        "responses":
        {
          "200":
          {
            "description":"Array of available fields for ordering with metadata (DEFAULT, TABLE, FIELD, Display name, Description, Type, Visible flag)"
          }
,
          "400":
          {
            "description":"Invalid request"
          }
,
          "500":
          {
            "description":"Internal server error"
          }
        }
      }
    }
,
    "\/workflows\/delete":
    {
      "post":
      {
        "tags":
        [
          "Workflows"
        ]
,
        "description":"Delete workflow",
        "operationId":"WorkflowsController.TWorkflowsController_Delete",
        "consumes":
        [
          "application\/json"
        ]
,
        "produces":
        [
          "application\/json"
        ]
,
        "parameters":
        [
                    {
            "in":"body",
            "name":"CD_WORKFLOW",
            "description":"Workflow code identifier (required)",
            "required":true,
            "type":"string"
          }
        ]
,
        "responses":
        {
          "200":
          {
            "description":"Workflow deleted successfully"
          }
,
          "400":
          {
            "description":"Missing required parameter CD_WORKFLOW"
          }
,
          "404":
          {
            "description":"Workflow not found"
          }
,
          "409":
          {
            "description":"Workflow is referenced by other data and cannot be deleted"
          }
,
          "500":
          {
            "description":"Internal server error"
          }
        }
      }
    }
,
    "\/workflows\/getall":
    {
      "post":
      {
        "tags":
        [
          "Workflows"
        ]
,
        "description":"Get all workflows",
        "operationId":"WorkflowsController.TWorkflowsController_GetAll",
        "consumes":
        [
          "application\/json"
        ]
,
        "produces":
        [
          "application\/json"
        ]
,
        "parameters":
        [
                    {
            "in":"body",
            "name":"Language",
            "description":"Language code EN\/ES (optional, default EN)",
            "default":"EN",
            "type":"string"
          }
        ]
,
        "responses":
        {
          "200":
          {
            "description":"Array of workflows with CD_WORKFLOW and DS_WORKFLOW fields"
          }
,
          "400":
          {
            "description":"Invalid request parameters"
          }
,
          "500":
          {
            "description":"Internal server error"
          }
        }
      }
    }
,
    "\/workflows\/load":
    {
      "post":
      {
        "tags":
        [
          "Workflows"
        ]
,
        "description":"Load workflows with pagination and search",
        "operationId":"WorkflowsController.TWorkflowsController_Load",
        "consumes":
        [
          "application\/json"
        ]
,
        "produces":
        [
          "application\/json"
        ]
,
        "parameters":
        [
                    {
            "in":"body",
            "name":"OrderField",
            "description":"Field to order by (optional, default WORKFLOWS.CD_WORKFLOW)",
            "default":"WORKFLOWS.CD_WORKFLOW",
            "type":"string"
          }
,
          
          {
            "in":"body",
            "name":"PageNumber",
            "description":"Page number for pagination (must be >= 1, required)",
            "required":true,
            "type":"integer"
          }
,
          
          {
            "in":"body",
            "name":"SearchText",
            "description":"Search text to filter workflows (optional)",
            "type":"string"
          }
        ]
,
        "responses":
        {
          "200":
          {
            "description":"Array of workflows matching search criteria with pagination (X-Pages-Quantity header contains total pages)"
          }
,
          "400":
          {
            "description":"Invalid PageNumber or search parameters"
          }
,
          "500":
          {
            "description":"Internal server error"
          }
        }
      }
    }
,
    "\/workflows\/getone":
    {
      "post":
      {
        "tags":
        [
          "Workflows"
        ]
,
        "description":"Get single workflow by code",
        "operationId":"WorkflowsController.TWorkflowsController_GetOne",
        "consumes":
        [
          "application\/json"
        ]
,
        "produces":
        [
          "application\/json"
        ]
,
        "parameters":
        [
                    {
            "in":"body",
            "name":"CD_WORKFLOW",
            "description":"Workflow code identifier (required)",
            "required":true,
            "type":"string"
          }
        ]
,
        "responses":
        {
          "200":
          {
            "description":"Workflow object with CD_WORKFLOW and DS_WORKFLOW fields"
          }
,
          "204":
          {
            "description":"Workflow not found"
          }
,
          "400":
          {
            "description":"Missing required parameter CD_WORKFLOW"
          }
,
          "500":
          {
            "description":"Internal server error"
          }
        }
      }
    }
,
    "\/workflows\/insert":
    {
      "post":
      {
        "tags":
        [
          "Workflows"
        ]
,
        "description":"Create new workflow",
        "operationId":"WorkflowsController.TWorkflowsController_Insert",
        "consumes":
        [
          "application\/json"
        ]
,
        "produces":
        [
          "application\/json"
        ]
,
        "parameters":
        [
                    {
            "in":"body",
            "name":"CD_WORKFLOW",
            "description":"Workflow code identifier (required)",
            "required":true,
            "type":"string"
          }
,
          
          {
            "in":"body",
            "name":"DS_WORKFLOW",
            "description":"Workflow description (required)",
            "required":true,
            "type":"string"
          }
        ]
,
        "responses":
        {
          "201":
          {
            "description":"Workflow created successfully"
          }
,
          "400":
          {
            "description":"Missing required parameters or invalid data"
          }
,
          "409":
          {
            "description":"Workflow code already exists"
          }
,
          "500":
          {
            "description":"Internal server error"
          }
        }
      }
    }
,
    "\/workflows\/update":
    {
      "post":
      {
        "tags":
        [
          "Workflows"
        ]
,
        "description":"Update existing workflow",
        "operationId":"WorkflowsController.TWorkflowsController_Update",
        "consumes":
        [
          "application\/json"
        ]
,
        "produces":
        [
          "application\/json"
        ]
,
        "parameters":
        [
                    {
            "in":"body",
            "name":"CD_WORKFLOW",
            "description":"Workflow code identifier (required)",
            "required":true,
            "type":"string"
          }
,
          
          {
            "in":"body",
            "name":"DS_WORKFLOW",
            "description":"Workflow description (required)",
            "required":true,
            "type":"string"
          }
        ]
,
        "responses":
        {
          "200":
          {
            "description":"Workflow updated successfully"
          }
,
          "400":
          {
            "description":"Missing required parameters or invalid data"
          }
,
          "404":
          {
            "description":"Workflow not found"
          }
,
          "500":
          {
            "description":"Internal server error"
          }
        }
      }
    }
  }
,
  "securityDefinitions":
  {
    "basic":
    {
      "type":"basic"
    }
,
    "bearer":
    {
      "type":"apiKey",
      "description":"Method for authentication using JSON Web Token (JWT)",
      "in":"header",
      "name":"Authorization"
    }
  }
}
