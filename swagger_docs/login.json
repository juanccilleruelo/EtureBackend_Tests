{
  "swagger":"2.0",
  "info":
  {
    "version":"Ver 1.0",
    "title":"Eture Server API",
    "description":"Eture Server RESTful API Documentation",
    "contact":
    {
      "name":"Juan C.Cilleruelo",
      "email":"juanc.cilleruelo@sencille.es",
      "url":"https:\/\/github.com\/juanccilleruelo"
    }
  }
,
  "host":"127.0.0.1:8181",
  "basePath":"\/api",
  "schemes":
  [
    "http"
  ]
,
  "paths":
  {
    "\/login;\/api\/swagger":
    {
      "post":
      {
        "tags":
        [
          "JWT Authentication"
        ]
,
        "description":"Create JSON Web Token",
        "produces":
        [
          "application\/json"
        ]
,
        "parameters":
        [
                    {
            "in":"header",
            "name":"jwtusername",
            "type":"string"
          }
,
          
          {
            "in":"header",
            "name":"jwtpassword",
            "type":"string"
          }
        ]
,
        "responses":
        {
          "200":
          {
            "description":"OK",
            "schema":
            {
              "type":"object",
              "properties":
              {
                "token":
                {
                  "type":"string",
                  "description":"JWT Token"
                }
              }
            }
          }
,
          "401":
          {
            "description":"Invalid authorization type"
          }
,
          "403":
          {
            "description":"Forbidden"
          }
,
          "500":
          {
            "description":"Internal server error"
          }
        }
,
        "security":
        [
                    {
            "basic":
            [
                          ]
          }
        ]
      }
    }
,
    "\/login\/createnewuser":
    {
      "post":
      {
        "tags":
        [
          "Authentication"
        ]
,
        "description":"Create new user account with registration data. Required: CD_USER, EMAIL and other user fields. Returns 200 on success, 400 if user\/email exists, 500 on creation failure",
        "operationId":"LoginController.TLoginController_CreateNewUser",
        "consumes":
        [
          "application\/json"
        ]
,
        "produces":
        [
          "application\/json"
        ]
,
        "responses":
        {
          "200":
          {
            "description":"OK"
          }
,
          "500":
          {
            "description":"Internal server error"
          }
        }
      }
    }
,
    "\/login\/getiduser":
    {
      "post":
      {
        "tags":
        [
          "Authentication"
        ]
,
        "description":"Generate unique user ID for new user. Optional: CD_USER or EMAIL filter. Returns JSON with ROW field containing generated ID_USER. Status 200 on success, 400 if invalid input, 500 on generation failure",
        "operationId":"LoginController.TLoginController_GetIdUser",
        "consumes":
        [
          "application\/json"
        ]
,
        "produces":
        [
          "application\/json"
        ]
,
        "responses":
        {
          "200":
          {
            "description":"OK"
          }
,
          "500":
          {
            "description":"Internal server error"
          }
        }
      }
    }
,
    "\/login\/recovercduser":
    {
      "post":
      {
        "tags":
        [
          "Authentication"
        ]
,
        "description":"Recover user information by email or CD_USER. Required: EMAIL or CD_USER in JSON body. Returns JSON with ROW field containing user data (CD_USER, EMAIL, VERIFIED status). Status 200 on success, 400 if invalid JSON, 404 if user not found, 500 on recovery failure",
        "operationId":"LoginController.TLoginController_RecoverCD_USER",
        "consumes":
        [
          "application\/json"
        ]
,
        "produces":
        [
          "application\/json"
        ]
,
        "responses":
        {
          "200":
          {
            "description":"OK"
          }
,
          "500":
          {
            "description":"Internal server error"
          }
        }
      }
    }
,
    "\/login\/savenewpassword":
    {
      "post":
      {
        "tags":
        [
          "Authentication"
        ]
,
        "description":"Save new password for user. Required: CD_USER, new password data. Hashes password using SALT. Returns 200 on success, 400 if CD_USER invalid, 500 on update failure",
        "operationId":"LoginController.TLoginController_SaveNewPassword",
        "consumes":
        [
          "application\/json"
        ]
,
        "produces":
        [
          "application\/json"
        ]
,
        "responses":
        {
          "200":
          {
            "description":"OK"
          }
,
          "500":
          {
            "description":"Internal server error"
          }
        }
      }
    }
,
    "\/login\/validate\/{UserName}\/{Password}":
    {
      "get":
      {
        "tags":
        [
          "Authentication"
        ]
,
        "description":"Validate user credentials. Route params: UserName (required), Password (required). Returns HTTP 200 on success with user roles in JWT token, 401 on invalid credentials",
        "operationId":"LoginController.TLoginController_Validate",
        "produces":
        [
          "application\/json"
        ]
,
        "parameters":
        [
                    {
            "in":"path",
            "name":"Password",
            "required":true,
            "type":"string"
          }
,
          
          {
            "in":"path",
            "name":"UserName",
            "required":true,
            "type":"string"
          }
        ]
,
        "responses":
        {
          "200":
          {
            "description":"OK"
          }
,
          "500":
          {
            "description":"Internal server error"
          }
        }
      }
    }
,
    "\/login\/sendverificationemail":
    {
      "post":
      {
        "tags":
        [
          "Authentication"
        ]
,
        "description":"Send email verification code with validation. Required: CD_USER, EMAIL, NUMBER. Validates that user and email do not exist. Returns 200 on success, 400 if user\/email exists, 500 on email send failure",
        "operationId":"LoginController.TLoginController_SendVerificationEmail",
        "consumes":
        [
          "application\/json"
        ]
,
        "produces":
        [
          "application\/json"
        ]
,
        "responses":
        {
          "200":
          {
            "description":"OK"
          }
,
          "500":
          {
            "description":"Internal server error"
          }
        }
      }
    }
,
    "\/login\/sendverificationemailwc":
    {
      "post":
      {
        "tags":
        [
          "Authentication"
        ]
,
        "description":"Send email verification code WITHOUT validation. Required: CD_USER, EMAIL, NUMBER. No checks on user\/email existence. Returns JSON with MESSAGE field (OK=sent, FAIL=failed). Status 200 on success, 500 on failure",
        "operationId":"LoginController.TLoginController_SendVerificationEmailWC",
        "consumes":
        [
          "application\/json"
        ]
,
        "produces":
        [
          "application\/json"
        ]
,
        "responses":
        {
          "200":
          {
            "description":"OK"
          }
,
          "500":
          {
            "description":"Internal server error"
          }
        }
      }
    }
  }
,
  "securityDefinitions":
  {
    "basic":
    {
      "type":"basic"
    }
,
    "bearer":
    {
      "type":"apiKey",
      "description":"Method for authentication using JSON Web Token (JWT)",
      "in":"header",
      "name":"Authorization"
    }
  }
}
